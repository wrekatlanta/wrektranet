- content_for :title, "Ticket Signups"

.page-header
  h1 Ticket Signups

= render 'navigation'

table.table.table-striped
  thead
    tr
      th User
      th Event
      th Time
      th Venue
      th Signup Time
      th Status
  tbody
    - unless @staff_tickets.empty?
      - for ticket in @staff_tickets do
        tr
          td = ticket.user.username
          td = link_to ticket.contest.event.name, air_contest_path(ticket.contest)
          td = l ticket.contest.event.start_time, format: :us_time
          td = ticket.contest.venue.name
          td = l ticket.created_at, format: :us_time
          td = ticket.status_label
    - else
      tr
        td colspan="6" No results were found.

= will_paginate @staff_tickets, renderer: BootstrapPagination::Rails, bootstrap: 3